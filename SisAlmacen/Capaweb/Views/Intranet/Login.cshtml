@{
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Ketal Moda | Login</title>
        <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
        <meta content="" name="description" />
        <meta content="" name="author" />

        <!-- ================== BEGIN BASE CSS STYLE ================== -->
        <link href="~/Recursos/Bootstrapi/assets/plugins/jquery-ui/themes/base/minified/jquery-ui.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Recursos/Bootstrapi/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Recursos/Bootstrapi/assets/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Recursos/Bootstrapi/assets/css/animate.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Recursos/Bootstrapi/assets/css/style.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Recursos/Bootstrapi/assets/css/style-responsive.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Recursos/Bootstrapi/assets/css/theme/default.css" rel="stylesheet" type="text/css" />
        <!-- ================== END BASE CSS STYLE ================== -->

        <!-- ================== BEGIN BASE JS ================== -->
        <script type="text/javascript" src="~/Recursos/Bootstrapi/assets/plugins/pace/pace.min.js"></script>
        <script type="text/javascript" src="~/Recursos/Bootstrapi/assets/plugins/jquery/jquery-1.9.1.min.js"></script>
        <script type="text/javascript" src="~/Recursos/Bootstrapi/assets/plugins/jquery/jquery-migrate-1.1.0.min.js"></script>
        <script type="text/javascript" src="~/Recursos/Bootstrapi/assets/plugins/jquery-ui/ui/minified/jquery-ui.min.js"></script>
        <script type="text/javascript" src="~/Recursos/Bootstrapi/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="~/Recursos/Bootstrapi/assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
        <script type="text/javascript" src="~/Recursos/Bootstrapi/assets/plugins/jquery-cookie/jquery.cookie.js"></script>

        <script type="text/javascript" src="~/Recursos/Validaciones/jquery.js"></script>
        <script type="text/javascript" src="~/Recursos/Validaciones/jquery.validate.js"></script>
        <!-- ================== END BASE JS ================== -->

        <!-- ================== BEGIN PAGE LEVEL JS ================== -->
        <script type="text/javascript" src="~/Recursos/Bootstrapi/assets/js/apps.min.js"></script>
        <!-- ================== END PAGE LEVEL JS ================== -->

    </head>
    <body class="pace-top bg-white">
        <!-- begin #page-loader -->
        <div id="page-loader" class="fade in"><span class="spinner"></span></div>
        <!-- end #page-loader -->
        <!-- begin #page-container -->
        <div id="page-container" class="fade">
            <!-- begin login -->
            <div class="login login-with-news-feed">
                <!-- begin news-feed -->
                <div class="news-feed">
                    <div class="news-image">
                        <img src="~/Recursos/Bootstrapi/assets/img/login-bg/Zapatos-hombre.png" data-id="login-cover-image" alt="" />
                    </div>
                    <div class="news-caption">
                        <h4 class="caption-title"><i class="fa fa-diamond text-success"></i> Recorre un Nuevo Mundo con Ketal Moda </h4>
                        <strong>
                            <p>
                                El Placer del Buen Caminar ya no es más un sueño, ahora es una REALIDAD.
                            </p>
                        </strong>
                    </div>
                </div>
                <!-- end news-feed -->
                <!-- begin right-content -->
                <div class="right-content">
                    <!-- begin login-header -->

                    <div class="login-header">

                        <div class="icon">
                            <a href="@Url.Action("Index","Inicio")" class="dropdown-toggle"><i class="fa fa-reply"></i></a>
                        </div>
                        <br />
                        <br />
                        <div class="brand">
                            <span class="logo"></span> Inicio de Sesión
                            <small>Comienza una nueva experiencia</small>
                        </div>
                    </div>
                    <!-- end login-header -->
                    <!-- begin login-content -->
                    <center><span class="label label-warning" style="font-size:15px;">@ViewBag.mensaje</span></center>
                    <div class="login-content">
                        <form method="POST" class="margin-bottom-0" id="miformulario">
                            <div class="form-group m-b-15">
                                <input type="text" class="form-control input-lg" placeholder="Usuario" name="txtUsuario" id="usuario" required/><br />
                            </div>
                            <div class="form-group m-b-15">
                                <input type="password" class="form-control input-lg" placeholder="Clave" name="txtpassword"  required />
                            </div>
                            <div class="login-buttons">
                                <button type="submit" class="btn btn-success btn-block btn-lg" name="btnEntrar" id="btnEntrar">Entrar</button>
                            </div>

                            <hr />
                            <p class="text-center text-inverse">
                                Copyright &copy; Ketal Moda Todos los Derechos Reservados 2016.
                            </p>
                        </form>
                    </div>
                    <!-- end login-content -->
                </div>
                <!-- end right-container -->
            </div>
            <!-- end login -->

        </div>

    </body>
</html>

<script type="text/javascript">
    $(document).ready(function () {
        App.init();
    });

    $().ready(function () {
        $("#miformulario").validate();
    });

</script>