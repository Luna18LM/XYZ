@model Capaentidades.Distribuidor
@{
    ViewBag.Title = "EditarDistribuidor";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">Editar Distribuidor</h4>
</div>
<div class="modal-body">
    <form action="EditarDistribuidor/DistribuidorController" method="post" id="FormEditar">
        <label class="col-md-3 control-label">Razon Social :</label><input type="text" class="form-control" placeholder="Ingrese Razon Social" name="txtRazonSocial" value="@Html.DisplayFor(model => model.RazonSocial)" />  <br />
        <label class="col-md-3 control-label">Ruc :</label><input type="text" class="form-control" placeholder="Ingrese Ruc" name="txtRuc" value="@Html.DisplayFor(model => model.Ruc)" /><br />
        <label class="col-md-3 control-label">Direccion :</label><input type="text" class="form-control" placeholder="Ingrese Direccion" name="txtDireccion" value="@Html.DisplayFor(model => model.Direccion)" />  <br />
        <label class="col-md-3 control-label">Telefono :</label><input type="text" class="form-control" placeholder="Ingrese Telefono" name="txtTelefono" value="@Html.DisplayFor(model => model.Telefono)" /><br />
        <label class="col-md-3 control-label">Email :</label><input type="text" class="form-control" placeholder="Ingrese E-mail" name="txtEmail" value="@Html.DisplayFor(model => model.Email)" />
        <input type="hidden" class="form-control" placeholder="Ingrese Descripcion" name="txtIdDistribuidor" value="@Html.DisplayFor(model => model.idDistribuidor)" />
        <div class="modal-footer">
            <a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">Close</a>
            <button class="btn btn-sm btn-success" name="btnActualizar">Actualizar</button>
        </div>
    </form>
</div>

