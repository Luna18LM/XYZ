@{
    ViewBag.Title = "NuevoDiseño";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">Nuevo Diseño</h4>
</div>
<div class="modal-body">
    <form action="NuevoDiseño/DiseñoController" method="post" id="FormNuevo">
        <label class="col-md-3 control-label">Nombre :</label><input type="text" class="form-control" placeholder="Ingrese Nombre" name="txtNombre" />  <br />
        <label class="col-md-3 control-label">Descripcion :</label><input type="text" class="form-control" placeholder="Ingrese Descripcion" name="txtDescripcion" />
        <div class="modal-footer">
            <a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">Close</a>
            <button class="btn btn-sm btn-success" name="btnRegistrar">Guardar</button>
        </div>
    </form>
</div>
