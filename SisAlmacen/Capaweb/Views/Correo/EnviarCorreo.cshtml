@{
    ViewBag.Title = "EnviarCorreo";
    Layout = "~/Views/MasterIntranet.cshtml";
}
@{Capaentidades.Usuario u = (Capaentidades.Usuario)Session["usuario"];}

<script type="text/javascript" src="~/Recursos/Validaciones/jquery.js"></script>
<script type="text/javascript" src="~/Recursos/Validaciones/jquery.validate.js"></script>
<div class="wrapper">
    <div class="p-30 bg-white">
        <!-- begin email form -->
        <form action="IngresarCorreo/CorreoController" method="POST" name="email_to_form" id="FormEmail">
            <input type="hidden" class="form-control" name="txtDe" value="@u.Email" />
            <input type="hidden" class="form-control" name="txtPassword" value="@u.Contasena" />
            <input type="hidden" class="form-control" name="txtidUsuario" value="@u.idUsuario" />
            <!-- begin email to -->
            <label class="control-label">Destinatario:</label>
            <div class="m-b-15">
                <input type="email" class="form-control" name="txtDestinario" placeholder="Ingrese Destinatario" required>
            </div>
            <!-- end email to -->
            <!-- begin email subject -->
            <label class="control-label">Asunto:</label>
            <div class="m-b-15">
                <input type="text" class="form-control" name="txtAsunto" placeholder="Ingrese Asunto" required>
            </div>
            <!-- end email subject -->
            <!-- begin email content -->
            <label class="control-label">Contenido:</label>
            <div class="m-b-15">
                <textarea class="textarea form-control" id="wysihtml5" placeholder="Ingrese el texto que desee enviar" rows="12" name="txtContenido" required></textarea>
            </div>
            <!-- end email content -->
            <button type="submit" class="btn btn-primary btn-success p-l-40 p-r-40" name="btnEnviar">Enviar</button>
        </form>
        <!-- end email form -->
    </div>
</div>

<script type="text/javascript">

    $().ready(function () {
        $("#FormEmail").validate();
    });

</script>