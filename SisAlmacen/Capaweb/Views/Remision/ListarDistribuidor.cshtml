@model IEnumerable<Capaentidades.Distribuidor>
@{
    ViewBag.Title = "ListarDistribuidor";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">Busqueda Distribuidor</h4>
</div>
<div class="modal-body">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Escriba el nombre a buscar" name="txtBusqueda" />
        <div class="input-group-btn">
            <button class="btn btn-success" name="btnActualizar"><i class="fa fa-search"></i></button>
        </div>
    </div>
    <br />
    <br />
    <div class="form-group">
        <table style="width:100%">
            <thead>
                <tr>
                    <th>Razon Social</th>
                    <th>RUC</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.RazonSocial)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ruc)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td>
                            <form method="post" action="/VentaPresencial/SeleccionaCliente">
                                <input type="hidden" name="txtRazonSocial" value="@Html.DisplayFor(modelItem => item.RazonSocial)" />
                                <input type="hidden" name="txtRuc" value="@Html.DisplayFor(modelItem => item.Ruc)" />
                                <input type="hidden" name="txtIdDistribuidor" value="@Html.DisplayFor(modelItem => item.idDistribuidor)" />
                                <button name="btnAgregar" class="btn btn-info m-r-5 m-b-5"><i class="fa fa-arrow-right"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal-footer">
    <a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">Close</a>
</div>
