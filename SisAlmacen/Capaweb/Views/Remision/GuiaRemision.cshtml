    ViewBag.Title = "GuiaRemision";
    Layout = "~/Views/MasterIntranet.cshtml";
}


<ol class="breadcrumb pull-right">
    <li><a href="@Url.Action("Principal","Intranet")">Principal</a></li>
    <li><a href="javascript:;">Registro de Guías</a></li>
    <li class="active">Guia Remisión</li>
</ol>

<div class="modal fade" id="modal-dialog">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>

<h2 class="page-header">Guía de Remisión</h2>
<div class="panel panel-inverse" data-sortable-id="form-stuff-1">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
        </div>
        <h4 class="panel-title">Registro de G. Remisión</h4>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="row separate">
                <div class="col-sm-6 col-md-6">
                    <div class="data-empresa">
                        <span class="titulo"> Ketal Moda S.A.C.</span>
                        <p>Calle. San Jorge 160 "El Porvenir""</p>
                        <p>Trujillo - La Libertad</p>
                        <p>Nº registro dee</p>
                    </div>
                </div>
                <div class="col-sm-6 col-md-6">
                    <div class="box-ruc">
                        <span>RUC Nº 20482005676 </span>
                        <span class="negrita">GUIA DE REMISION - REMITENTE</span>
                        <span>Nº 00001-0000</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>&nbsp;   Fecha de Traslado:</label>
                        <input type="text" class="form-control" id="datepicker-default" placeholder="Selecciona Fecha">
                    </div>
                    <div class="form-group">
                        <label>&nbsp;   Distribuidor :</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>&nbsp;   R.U.C. :</label>
                        <input type="text" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>&nbsp;   Punto de Partida :</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>&nbsp;   Punto de Llegada :</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <br />
                        <a href="javascript:;" class="btn btn-sm btn-success" data-toggle="modal" data-target="#modal-dialog" onclick="AgregarProducto()"><i class="fa fa-plus-circle"></i>Agregar Producto</a>
                        <a href="javascript:;" class="btn btn-sm btn-success" data-toggle="modal" data-target="#modal-dialog" onclick="AgregarDistribuidor()"><i class="fa fa-search"></i> Distribuidor</a>
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-print"></i> Imprimir</button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="box-ruc">
                    <span><b> Motivo de Traslado :</b> Traslado entre establecimientos de la misma empresa. </span>
                </div>
            </div>
            <br />
            <div class="row">
                <table class="table" align="center">
                    <thead>
                        <tr>
                            <th>Nº</th>
                            <th>Descripciom</th>
                            <th>Cantidad</th>
                            <th>Unidad de Medida</th>
                            <th>Precio</th>
                            <th>Sub-Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Zapato 1</td>
                            <td class="col-sm-3"><input type="text" class="form-control" placeholder="Cantidad" value="10" /></td>
                            <td><input type="text" class="form-control" placeholder="Unid. Medida" value="10" /></td>
                            <td>S/. 90.00</td>
                            <td>S/. 900.00</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><label class="control-label" align="center">Total : S/. 900.00</label></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>&nbsp;  <b> Datos del Transporte y Conductor :</b></label>
                    <div class="form-group">
                        <label>&nbsp;   Marca y Placa :</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>&nbsp;   Licencia de Conducir :</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>&nbsp;   Nº de Constancia de Inscripción del Vehiculo-MTC :</label>
                        <input type="text" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <label>&nbsp;  <b>Datos del Remitente :</b></label>
                    <div class="form-group">
                        <label>&nbsp;   RUC o Doc. de Identidad :</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>&nbsp;   Denominación, Nombres y Apellidos :</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <br />
                        <center> <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i> Guardar</button></center>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">

    function AgregarProducto() {
      var url = "@Url.Action("ListarProductos", "Remision")";
      $(".modal-content").load(url);
    }

    function AgregarDistribuidor() {
        var url = "@Url.Action("ListarDistribuidor", "Remision")";
        $(".modal-content").load(url);
    }
</script>