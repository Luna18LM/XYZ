@{
    ViewBag.Title = "NuevoDistribuidor";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">Nuevo Distribuidor</h4>
</div>
<div class="modal-body">
    <form action="NuevoDistribuidor/DistribuidorController" method="post" id="FormNuevo">
        <label class="col-md-3 control-label">Razon Social :</label><input type="text" class="form-control" placeholder="Ingrese Razon Social" name="txtRazonSocial" />  <br />
        <label class="col-md-3 control-label">Ruc :</label><input type="text" class="form-control" placeholder="Ingrese Ruc" name="txtRuc" /><br />
        <label class="col-md-3 control-label">Direccion :</label><input type="text" class="form-control" placeholder="Ingrese Direccion" name="txtDireccion" />  <br />
        <label class="col-md-3 control-label">Telefono :</label><input type="text" class="form-control" placeholder="Ingrese Telefono" name="txtTelefono" /><br />
        <label class="col-md-3 control-label">Email :</label><input type="text" class="form-control" placeholder="Ingrese E-mail" name="txtEmail" />
        <div class="modal-footer">
            <a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">Close</a>
            <button class="btn btn-sm btn-success" name="btnRegistrar">Guardar</button>
        </div>
    </form>
</div>
