@model Capaentidades.Producto
@{
    ViewBag.Title = "EliminarProducto";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">Eliminar Producto</h4>
</div>
<div class="modal-body">
    <form action="/Producto/EliminarProducto" method="post">
        <p>Se encuentra seguro que desea Eliminar este Producto : @Html.DisplayFor(model => model.Nombre)</p>
        <input type="hidden" class="form-control" placeholder="Ingrese estado" name="txtEstado" value="inactivo" />
        <input type="hidden" class="form-control" placeholder="Ingrese idDiseño" name="txtidProducto" value="@Html.DisplayFor(model => model.idProducto)" />
        <div class="modal-footer">
            <a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">No</a>
            <button class="btn btn-sm btn-success" name="btnEliminar">Si</button>
        </div>
    </form>
</div>
