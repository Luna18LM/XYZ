@model Capaentidades.Producto
@{
    ViewBag.Title = "DetalleProducto";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">Detalle Producto</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-lg-6">
            <img src="~/Recursos/Imagenes/Productos/@Html.DisplayFor(model => model.Imagen)" style="width:270px; height:350px" />
        </div>
        <div class="col-lg-6">
            <div class="row">
                <p><b>Nombre:</b> @Html.DisplayFor(model => model.Nombre) </p>
            </div>
            <div class="row">
                <p><b>Serie:</b> @Html.DisplayFor(model => model.Serie) </p>
            </div>
            <div class="row">
                <p><b>Precio:</b> @Html.DisplayFor(model => model.Precio) </p>
            </div>
            <div class="row">
                <p><b>Stock:</b> @Html.DisplayFor(model => model.Stock) </p>
            </div>
            <div class="row">
                <p><b>Descripcion:</b> @Html.DisplayFor(model => model.Descripcion) </p>
            </div>
            <div class="row">
                <p><b>Categoria:</b> @Html.DisplayFor(model => model.categoria.Nombre) </p>
            </div>
            <div class="row">
                <p><b>Talla:</b> @Html.DisplayFor(model => model.talla.Nombre) </p>
            </div>
            <div class="row">
                <p><b>Diseño:</b> @Html.DisplayFor(model => model.diseño.Nombre) </p>
            </div>
            <div class="row">
                <p><b>Color:</b> @Html.DisplayFor(model => model.color.Nombre) </p>
            </div>
        </div>
    </div>
        <div class="modal-footer">
            <a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">Close</a>
        </div>
</div>