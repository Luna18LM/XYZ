@model IEnumerable<Capaentidades.Distribuidor>
@{
    ViewBag.Title = "ListarDistribuidor";
    Layout = "~/Views/MasterIntranet.cshtml";
}
@{int i = 0;}
<ol class="breadcrumb pull-right">
    <li><a href="@Url.Action("Principal","Intranet")">Principal</a></li>
    <li><a href="javascript:;">Mantenedor</a></li>
    <li class="active">Distribuidor</li>
</ol>
<h2 class="page-header">Listado de Distribuidores</h2>

<div class="modal fade" id="modal-dialog">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>



<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12">
        <!-- begin panel -->
        <div>
            <a href="javascript:;" class="btn btn-sm btn-success" data-toggle="modal" data-target="#modal-dialog" onclick="Nuevo()"><i class="fa fa-edit"></i> Nuevo</a>
        </div>
        <br />
        <div class="panel panel-inverse" data-sortable-id="table-basic-7">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">Listado de Distribuidor</h4>

            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table" align="center">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Razon Social</th>
                                <th>Ruc</th>
                                <th>Direccion</th>
                                <th>Telefono</th>
                                <th>Email</th>
                                <th>Editar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td>@Html.DisplayFor(modelItem => m.RazonSocial)</td>
                                    <td>@Html.DisplayFor(modelItem => m.Ruc)</td>
                                    <td>@Html.DisplayFor(modelItem => m.Direccion)</td>
                                    <td>@Html.DisplayFor(modelItem => m.Telefono)</td>
                                    <td>@Html.DisplayFor(modelItem => m.Email)</td>
                                    <td><button class="btn btn-success btn-icon btn-circle btn-sm" data-toggle="modal" data-target="#modal-dialog" onclick="Editar(@m.idDistribuidor)"><i class="fa fa-refresh"></i></button></td>
                                    <td><button class="btn btn-danger btn-icon btn-circle btn-sm" data-toggle="modal" data-target="#modal-dialog" onclick="Eliminar(@m.idDistribuidor)"><i class="fa fa-times"></i></button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>

<script type="text/javascript">

    function Nuevo() {
        var url = "@Url.Action("NuevoDistribuidor","Distribuidor")";
        $(".modal-content").load(url);
    }

    function Editar(idDistribuidor) {
        var id = idDistribuidor.toString();
        var url = "@Url.Action("EditarDistribuidor", "Distribuidor")/" + id;
        $(".modal-content").load(url);
    }

    function Eliminar(idDistribuidor) {
        var id = idDistribuidor.toString();
        var url = "@Url.Action("EliminarDistribuidor", "Distribuidor")/" + id;
        $(".modal-content").load(url);
    }

</script>