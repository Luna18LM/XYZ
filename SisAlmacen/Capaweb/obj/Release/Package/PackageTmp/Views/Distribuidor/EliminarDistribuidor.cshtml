@model Capaentidades.Distribuidor
@{
    ViewBag.Title = "EliminarDistribuidor";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">Eliminar Distribuidor</h4>
</div>
<div class="modal-body">
    <form action="EliminarDistribuidor/DistribuidorController" method="post">
        <p>Se encuentra seguro que desea Eliminar este Distribuidor : @Html.DisplayFor(model => model.RazonSocial)</p>
        <input type="hidden" class="form-control" placeholder="Ingrese estado" name="txtEstado" value="inactivo" />
        <input type="hidden" class="form-control" placeholder="Ingrese idDistribuidor" name="txtIdDistribuidor" value="@Html.DisplayFor(model => model.idDistribuidor)" />
        <div class="modal-footer">
            <a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">No</a>
            <button class="btn btn-sm btn-success" name="btnEliminar">Si</button>
        </div>
    </form>
</div>

